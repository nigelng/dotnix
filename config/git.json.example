{
  "includes": [
    {
      "condition": "gitdir:~/Workspaces/solta/",
      "contents": {
        "user": {
          "email": "",
          "signingKey": ""
        },
        "commit": {
          "gpgSign": true
        }
      }
    }
  ],
  "lfs": {
    "enable": true,
    "skipSmudge": true
  },
  "extraConfig": {
    "user": {
      "useConfigOnly": true
    },
    "init": {
      "defaultBranch": "main"
    },
    "merge": {
      "conflictstyle": "diff3"
    },
    "push": {
      "autoSetupRemote": true
    },
    "core": {
      "preloadindex": true,
      "fscache": true,
      "editor": "vim"
    },
    "color": {
      "ui": true,
      "status": "always"
    }
  }
}
